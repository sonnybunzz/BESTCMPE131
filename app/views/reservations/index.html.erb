<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">

<%= link_to 'Reserve', new_reservation_path, :class => "btn btn-block btn-info", :type => "button" %>
<% if can? :manage, User %>
<table class ="table table-bordered table-hover table-condensed">
  <thead>
  <tr>
    <th colspan="1">Name</th>
    <th colspan="1">Number of people</th>
    <th>Time requested</th>
    <th>Time registered</th>
    <% if can? :manage, User %><th>Commands</th>
    <% end %>
  </tr>
  </thead>
 
  <% @reservations.each do |reservation| %>
    <tr>
      <td><%= reservation.title %></td>
      <td><%= reservation.text %></td>
      <td><%= reservation.time %></td>
      <td><%= reservation.created_at.strftime("%B %d %Y, %l:%M%P") %></td>
      <% if can? :manage, User %>
      <td><%= link_to "Edit", edit_reservation_path(reservation), :class => "btn btn-primary btn-sm", :type => "button" %><%= button_to 'Delete', reservation_path(reservation),
              :class => "btn btn-danger btn-sm", :type => "button", method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
  <% end %>
</table>
</div>
</div>

